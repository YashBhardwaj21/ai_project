<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clinical Treatment Advisor | AI-Powered Medical Recommendations</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .fade-in { animation: fadeIn 0.5s ease-in; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .medical-shadow { box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); }
        .score-bar { transition: width 0.3s ease; }
        .section-divider { border-color: #e2e8f0; }
    </style>
</head>
<body class="bg-slate-50 min-h-screen font-sans">
    <!-- Header -->
    <header class="gradient-bg text-white">
        <div class="container mx-auto px-6 py-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="bg-white/20 p-3 rounded-xl">
                        <i class="fas fa-stethoscope text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold">Clinical Treatment Advisor</h1>
                        <p class="text-blue-100 mt-1">AI-Powered Medical Recommendation System</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-8 max-w-6xl">
        <!-- Information Panel -->
        <div class="bg-white rounded-xl medical-shadow mb-8">
            <div class="p-6 border-b border-slate-100">
                <div class="flex items-center space-x-4">
                    <div class="bg-blue-50 p-3 rounded-lg">
                        <i class="fas fa-info-circle text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-slate-800">Clinical Decision Support</h2>
                        <p class="text-slate-600 text-sm mt-1">
                            Enter patient symptoms and medical conditions to receive evidence-based treatment recommendations. 
                            This system assists healthcare professionals in clinical decision-making.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Input Section -->
        <div class="bg-white rounded-xl medical-shadow mb-8">
            <div class="p-6 border-b border-slate-100">
                <h2 class="text-xl font-semibold text-slate-800 flex items-center">
                    <i class="fas fa-clipboard-list mr-3 text-blue-600"></i>
                    Patient Assessment
                </h2>
            </div>

            <form id="predictionForm" class="p-6 space-y-6">
                <!-- Symptoms Input -->
                <div>
                    <label for="symptoms" class="block text-sm font-semibold text-slate-700 mb-3 flex items-center">
                        <i class="fas fa-notes-medical mr-2 text-red-500"></i>
                        Presenting Symptoms
                        <span class="text-red-500 ml-1">*</span>
                    </label>
                    <textarea 
                        id="symptoms" 
                        name="symptoms"
                        rows="4"
                        class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all resize-none"
                        placeholder="Describe patient symptoms in detail (e.g., persistent dry cough, fever of 38.5°C, chest tightness)..."
                        required
                    ></textarea>
                    <p class="text-xs text-slate-500 mt-2">Be specific about duration, severity, and associated symptoms</p>
                </div>

                <!-- Condition Input -->
                <div>
                    <label for="condition" class="block text-sm font-semibold text-slate-700 mb-3 flex items-center">
                        <i class="fas fa-diagnoses mr-2 text-purple-500"></i>
                        Medical Condition / Diagnosis
                        <span class="text-red-500 ml-1">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="condition" 
                        name="condition"
                        class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                        placeholder="Enter primary diagnosis or suspected condition (e.g., acute bronchitis, migraine, hypertension)..."
                        required
                    >
                    <p class="text-xs text-slate-500 mt-2">Specify confirmed or suspected medical conditions</p>
                </div>

                <!-- Advanced Options -->
                <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
                    <div class="flex items-center justify-between cursor-pointer" onclick="toggleAdvancedOptions()">
                        <div class="flex items-center">
                            <i class="fas fa-sliders-h mr-2 text-slate-600"></i>
                            <span class="text-sm font-semibold text-slate-700">Advanced Parameters</span>
                        </div>
                        <i id="advancedArrow" class="fas fa-chevron-down text-slate-500 transition-transform"></i>
                    </div>
                    
                    <div id="advancedOptions" class="hidden space-y-4 mt-4">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label for="topK" class="block text-xs font-medium text-slate-600 mb-2">Recommendation Limit</label>
                                <input 
                                    type="number" 
                                    id="topK" 
                                    name="topK"
                                    min="1" 
                                    max="15" 
                                    value="5"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500"
                                >
                            </div>
                            <div>
                                <label for="threshold" class="block text-xs font-medium text-slate-600 mb-2">Confidence Threshold</label>
                                <input 
                                    type="number" 
                                    id="threshold" 
                                    name="threshold"
                                    min="0" 
                                    max="1" 
                                    step="0.05"
                                    placeholder="0.50"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500"
                                >
                            </div>
                            <div class="flex items-center space-x-2">
                                <input 
                                    type="checkbox" 
                                    id="scopeCategory" 
                                    name="scopeCategory"
                                    checked
                                    class="w-4 h-4 text-blue-600 focus:ring-blue-500 border-slate-300 rounded"
                                >
                                <label for="scopeCategory" class="text-xs font-medium text-slate-600">Category-Specific Results</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                    <button 
                        type="submit"
                        id="predictBtn"
                        class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 flex items-center justify-center"
                    >
                        <i class="fas fa-search-medical mr-2"></i>
                        Analyze & Recommend
                    </button>
                    <button 
                        type="button"
                        onclick="loadExample()"
                        class="flex-1 bg-slate-600 hover:bg-slate-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 flex items-center justify-center"
                    >
                        <i class="fas fa-vial mr-2"></i>
                        Load Clinical Example
                    </button>
                </div>
            </form>
        </div>

        <!-- Loading State -->
        <div id="loading" class="hidden bg-white rounded-xl medical-shadow p-8 text-center mb-8">
            <div class="flex flex-col items-center space-y-4">
                <div class="relative">
                    <div class="w-16 h-16 border-4 border-blue-100 rounded-full"></div>
                    <div class="w-16 h-16 border-4 border-blue-600 border-t-transparent rounded-full animate-spin absolute top-0"></div>
                </div>
                <div>
                    <p class="text-slate-700 font-medium">Processing Clinical Data</p>
                    <p class="text-slate-500 text-sm mt-1">Analyzing symptoms and generating treatment protocols</p>
                </div>
            </div>
        </div>

        <!-- Error State -->
        <div id="error" class="hidden bg-red-50 border border-red-200 rounded-xl p-6 mb-8">
            <div class="flex items-center space-x-3">
                <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
                <div>
                    <p id="errorMessage" class="text-red-700 font-medium"></p>
                    <p class="text-red-600 text-sm mt-1">Please check the input and try again</p>
                </div>
            </div>
        </div>

        <!-- Results Section -->
        <div id="results" class="hidden fade-in space-y-8">
            <!-- Clinical Category -->
            <div class="bg-white rounded-xl medical-shadow p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-semibold text-slate-800 flex items-center">
                        <i class="fas fa-tags mr-3 text-blue-600"></i>
                        Clinical Assessment Summary
                    </h3>
                    <div class="flex items-center space-x-4">
                        <div id="categoryIcon" class="text-2xl"></div>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="text-sm font-medium text-slate-600 mb-2">Primary Clinical Category</h4>
                        <p id="category" class="text-lg font-semibold text-slate-800"></p>
                    </div>
                    <div>
                        <h4 class="text-sm font-medium text-slate-600 mb-2">Analysis Confidence</h4>
                        <div class="flex items-center space-x-3">
                            <span id="confidence" class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full"></span>
                            <div class="flex-1 bg-slate-200 rounded-full h-2">
                                <div id="confidenceBar" class="bg-blue-500 h-2 rounded-full score-bar"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Treatment Recommendations -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Medications -->
                <div class="bg-white rounded-xl medical-shadow">
                    <div class="p-6 border-b border-slate-100">
                        <h3 class="text-lg font-semibold text-slate-800 flex items-center">
                            <i class="fas fa-pills mr-2 text-green-600"></i>
                            Pharmacological Recommendations
                        </h3>
                    </div>
                    <div class="p-6">
                        <div id="medications" class="space-y-4">
                            <!-- Medications populated here -->
                        </div>
                        <div id="noMeds" class="hidden text-center py-8">
                            <i class="fas fa-pills text-slate-300 text-3xl mb-3"></i>
                            <p class="text-slate-500 text-sm">No pharmacological recommendations available</p>
                        </div>
                    </div>
                </div>

                <!-- Procedures -->
                <div class="bg-white rounded-xl medical-shadow">
                    <div class="p-6 border-b border-slate-100">
                        <h3 class="text-lg font-semibold text-slate-800 flex items-center">
                            <i class="fas fa-procedures mr-2 text-purple-600"></i>
                            Diagnostic & Therapeutic Procedures
                        </h3>
                    </div>
                    <div class="p-6">
                        <div id="procedures" class="space-y-4">
                            <!-- Procedures populated here -->
                        </div>
                        <div id="noProcs" class="hidden text-center py-8">
                            <i class="fas fa-procedures text-slate-300 text-3xl mb-3"></i>
                            <p class="text-slate-500 text-sm">No procedure recommendations available</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Clinical Notes -->
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
                <div class="flex items-start space-x-3">
                    <i class="fas fa-clipboard-check text-blue-600 text-lg mt-1"></i>
                    <div>
                        <h4 class="font-semibold text-blue-800 mb-2">Clinical Guidance</h4>
                        <p class="text-blue-700 text-sm">
                            These recommendations are generated based on clinical data patterns and should be reviewed 
                            by qualified healthcare professionals. Always consider patient-specific factors, contraindications, 
                            and current clinical guidelines before implementing any treatment plan.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="bg-white rounded-xl medical-shadow p-12 text-center">
            <div class="max-w-md mx-auto">
                <div class="text-slate-400 mb-6">
                    <i class="fas fa-stethoscope text-5xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-slate-700 mb-3">Ready for Clinical Analysis</h3>
                <p class="text-slate-500 mb-6">
                    Enter patient symptoms and medical condition above to generate evidence-based treatment recommendations.
                </p>
                <div class="bg-slate-50 rounded-lg p-4 border border-slate-200">
                    <p class="text-slate-600 text-sm font-medium mb-2">Quick Start Tip</p>
                    <p class="text-slate-500 text-xs">
                        Click "Load Clinical Example" to see sample data and understand the analysis format.
                    </p>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-slate-800 text-slate-300 mt-12">
        <div class="container mx-auto px-6 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                
            </div>
        </div>
    </footer>

    <script>
        // Initialize page state
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('emptyState').classList.remove('hidden');
        });

        // Toggle advanced options
        function toggleAdvancedOptions() {
            const options = document.getElementById('advancedOptions');
            const arrow = document.getElementById('advancedArrow');
            options.classList.toggle('hidden');
            arrow.classList.toggle('fa-chevron-down');
            arrow.classList.toggle('fa-chevron-up');
        }

        // Handle form submission
        document.getElementById('predictionForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const symptoms = formData.get('symptoms');
            const condition = formData.get('condition');
            const topK = formData.get('topK') || 5;
            const threshold = formData.get('threshold');
            const scopeCategory = formData.get('scopeCategory') === 'on';

            // Show loading, hide other states
            document.getElementById('loading').classList.remove('hidden');
            document.getElementById('results').classList.add('hidden');
            document.getElementById('error').classList.add('hidden');
            document.getElementById('emptyState').classList.add('hidden');
            
            try {
                const response = await fetch('/api/predict-treatment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        symptoms: symptoms,
                        condition: condition,
                        topK: parseInt(topK),
                        threshold: threshold ? parseFloat(threshold) : null,
                        scopeCategory: scopeCategory
                    })
                });
                
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.error || 'Clinical analysis failed. Please try again.');
                }
                
                displayResults(data);
                
            } catch (error) {
                showError(error.message);
            }
        });

        // Display results
        function displayResults(data) {
            document.getElementById('loading').classList.add('hidden');
            
            // Set category and confidence
            document.getElementById('category').textContent = data.category;
            const confidencePercent = Math.round(data.confidence * 100);
            document.getElementById('confidence').textContent = `${confidencePercent}%`;
            document.getElementById('confidenceBar').style.width = `${confidencePercent}%`;
            
            // Set category icon
            const categoryIcon = document.getElementById('categoryIcon');
            categoryIcon.className = getCategoryIcon(data.category);
            
            // Populate medications
            const medsContainer = document.getElementById('medications');
            const noMeds = document.getElementById('noMeds');
            medsContainer.innerHTML = '';
            
            if (data.medications && data.medications.length > 0) {
                data.medications.forEach(med => {
                    const medElement = createRecommendationElement(med, 'green');
                    medsContainer.appendChild(medElement);
                });
                noMeds.classList.add('hidden');
            } else {
                noMeds.classList.remove('hidden');
            }
            
            // Populate procedures
            const procsContainer = document.getElementById('procedures');
            const noProcs = document.getElementById('noProcs');
            procsContainer.innerHTML = '';
            
            if (data.procedures && data.procedures.length > 0) {
                data.procedures.forEach(proc => {
                    const procElement = createRecommendationElement(proc, 'purple');
                    procsContainer.appendChild(procElement);
                });
                noProcs.classList.add('hidden');
            } else {
                noProcs.classList.remove('hidden');
            }
            
            document.getElementById('results').classList.remove('hidden');
        }

        // Create recommendation element with visual score bars
        function createRecommendationElement(item, color) {
            const scorePercent = Math.round(item.score * 100);
            const scoreWidth = `${scorePercent}%`;
            
            const div = document.createElement('div');
            div.className = `bg-${color}-50 border border-${color}-200 rounded-lg p-4`;
            
            div.innerHTML = `
                <div class="flex justify-between items-start mb-3">
                    <span class="font-medium text-slate-800 text-sm leading-tight flex-1 pr-4">${item.name}</span>
                    <span class="bg-white text-slate-700 px-2 py-1 rounded text-xs font-semibold border border-slate-200 min-w-12 text-center">
                        ${scorePercent}%
                    </span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-xs text-slate-500 font-medium">Relevance Score</span>
                    <div class="flex-1 bg-slate-200 rounded-full h-2">
                        <div class="bg-${color}-500 h-2 rounded-full score-bar" style="width: ${scoreWidth}"></div>
                    </div>
                </div>
            `;
            
            return div;
        }

        // Get appropriate icon for category
        function getCategoryIcon(category) {
            const icons = {
                'Respiratory': 'fas fa-lungs text-blue-500',
                'Cardiovascular': 'fas fa-heart-pulse text-red-500',
                'Neurological': 'fas fa-brain text-purple-500',
                'Gastrointestinal': 'fas fa-stomach text-green-500',
                'Musculoskeletal': 'fas fa-bone text-amber-500',
                'Infectious': 'fas fa-virus-slash text-red-600',
                'Dermatological': 'fas fa-allergies text-orange-500',
                'Endocrine': 'fas fa-seedling text-emerald-500'
            };
            
            for (const [key, icon] of Object.entries(icons)) {
                if (category.toLowerCase().includes(key.toLowerCase())) {
                    return icon;
                }
            }
            
            return 'fas fa-stethoscope text-slate-400';
        }

        // Show error message
        function showError(message) {
            document.getElementById('loading').classList.add('hidden');
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('error').classList.remove('hidden');
        }

        // Load clinical example
        function loadExample() {
            document.getElementById('symptoms').value = 'Persistent productive cough with green sputum, fever of 38.5°C, chest tightness, and shortness of breath on exertion for 5 days';
            document.getElementById('condition').value = 'Acute Bronchitis';
        }
    </script>
</body>
</html>